<div class="card mb-4" style="width: 35rem;">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted"><%= @questions.created_at.strftime("%H:%M   %d.%m.%y") %></h6>
    <h5 class="card-title"><%= @questions.title %></h5>
    <p class="card-text"><%= @questions.body %></p>
    <div>
        <%= link_to 'Edit', edit_question_path(@questions) , class:"btn btn-secondary" %>
        <%= link_to 'Delete', question_path(@questions), class:"btn btn-dark","data-turbo-method": :delete , "data-turbo-confirm": 'Are you sure?'%>
    </div>
  </div>
</div>


<div class ="mb-4">
    <div class="card " style="width: 35rem;">
    
        <div class="card-body">
            <p class="card-text fs-3"><%= @questions.answers.size %> answers</p>
        </div> 
    </div>


    <div>
        <%@questions.answers.each do |answer| %>
            <div class="card" style="width: 35rem;">
                <div class="card-body">
                    <p class="card-text "><%= answer.body %></p>
                </div>
            </div>
        <% end%>
    </div>
</div>

<div class="card " style="width: 35rem;">
    <div class="card-body">
        <h5 class="card-title">Answer the question</h5>
        <div class="card-body">
            <%= form_with model: [ @questions, @questions.answers.build ]  do |form| %>
                <%= form.text_area :body , placeholder: "whrite answer" %>
        </div> 
        <div>
            <%= form.submit "submit" , class: "btn btn-primary"  %>  
            <% end %>          
        </div>  
    </div>
</div>


